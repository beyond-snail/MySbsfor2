                android:background="@mipmap/icon_downparams" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/id_downParams"
                android:gravity="center"
                android:paddingTop="35dip"
                android:text="参数下载"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/id_ll_unmenber"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/relay_bg" >

            <Button
                android:id="@+id/id_unmenber"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/id_unmenber"
                android:gravity="center"
                android:paddingTop="35dip"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_ll_unmember_masterkey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/relay_bg" >

            <Button
                android:id="@+id/id_unmember_masterkey"
                android:layout_width="wrap_content"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_master" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/id_unmember_masterkey"
                android:gravity="center"
                android:paddingTop="35dip"
                android:text="@string/down_masterkey"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

